#include <stdio.h>  //for printf
#include <cs50.h>   //for get_float
#include <math.h>   //for round fx

int main (void)
{
    float dollars;                                              //declare variable dollars as float
    do                                                          //prompt user for change and keep prompting if dollars is less than $0.01
    {
        dollars = get_float ("How much change is owed? ");
    }
    while (dollars <= 0.01);

    int cents = round(dollars * 100);                           //convert float dollars to int cents
    int coins = 0;                                              //initialize coins counter starting at 0 and declare as int

    while (cents >= 25)                                         //series of while: while >= 25, inc. coins by 1 and dec. cents by 0.25
    {                                                           //we use 25, not 0.25 because it has been converted to cents
        cents -= 25;
        coins++;
    }
    while (cents >= 10)                                         //for dimes
    {
        cents -= 10;
        coins++;
    }
    while (cents >= 5)                                          //for nickels
    {
        cents -= 5;
        coins++;
    }
    while (cents >= 1)                                          //for pennies
    {
        cents -= 1;
        coins++;
    }
    printf("Minimum number of coins is %i\n", coins);
}
