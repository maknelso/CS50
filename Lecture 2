Upper case example

int main (void)
{
    string s = get_string ("Before: ");
    printf("After: ");
    for (int i = 0, n = strlens); i < n; i++)
    {
        if (s[i] >= 'a' && s[i] <= 'z')
        {
            printf("%c", s[i] - 32);
        }
        else
        {
            printf("%c", s[i]);
        }
    }
printf("\n");
}








