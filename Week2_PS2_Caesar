#include <stdio.h>
#include <cs50.h>
#include <string.h>
#include <stdlib.h>
#include <ctype.h>                                                              //check if it's a digit

int main(int argc, string argv[])
{
    if (argc != 2)
    {
        printf("Usage: ./caesar key\n");
    }

    if (argc == 2)                                                              //command line will only accept 2 argc
    {
        string s = argv[1];                                                     
        
        for (int i = 0, n = strlen(s); i < n; i++)                              //check if each character in the string is a digit
        {
            if (0 != isdigit(s[i]))                                             //non-zero return value for isdigit() means it is a digit
            {
                printf("okay, you entered digits\n");
            }
            else
            {
                printf("Usage: ./caesar key\n");
            }
            int k = atoi(argv[1]);
        }
    }

}
