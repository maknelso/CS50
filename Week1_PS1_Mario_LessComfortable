#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int n;
    do
    {
        n = get_int("Height = ");
    }
    while (n < 1 || n > 8);

    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++) //inner loops runs until condition is false, then goes back to outter loop to run again. Once outter loop is entered, the counter for inner loop is reset
        {
            if (i + j < n - 1)      //trick: nest the IF inside the INNER LOOP
            {
                printf(" ");
            }
            else
            { 
                printf("#");
            }
        }
        printf("\n");
    }
}
